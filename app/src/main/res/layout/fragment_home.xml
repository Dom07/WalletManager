<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dom5230.utility.walletmanager.Home">

    <RelativeLayout
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:elevation="10dp"
                android:layout_marginRight="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Today's Spendings"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/SpendingsForToday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rs.300"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:layout_marginTop="2dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:elevation="10dp"
                android:layout_marginLeft="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Avg Spendings / Day"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:id="@+id/tvAverageSpending"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹ 300"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:layout_marginTop="2dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <!--android.support.v7.widget.CardView
            android:id="@+id/testLayout"
            android:layout_below="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="7dp">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Savings"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>

                <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="₹ 500"
                    android:textSize="40sp"
                    android:textColor="@color/colorGreen"
                    android:textStyle="bold"/>


            </LinearLayout>

        </-android.support.v7.widget.CardView-->

        <android.support.v7.widget.CardView
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout1"
            android:layout_above="@+id/labelRecentTransaction"
            android:elevation="10dp"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <com.github.mikephil.charting.charts.PieChart
                    android:layout_centerInParent="true"
                    android:id="@+id/piechart"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/labelRecentTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout3"
            android:layout_marginLeft="10dp"
            android:text="Recent Transactions"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:elevation="10dp">

                <ListView
                    android:id="@+id/LVLastFiveTransacctions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>

        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/FAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:elevation="10dp"
            android:src="@drawable/ic_add_white_24dp"
            app:useCompatPadding="true"
            android:visibility="visible"/>

    </RelativeLayout>
</FrameLayout>
