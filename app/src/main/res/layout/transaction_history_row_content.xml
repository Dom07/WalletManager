<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/tvPerItemCategory"
        android:text="Food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="50dp"
        android:layout_below="@id/tvPerItemCategory"
        android:id="@+id/tvPerItemDescription"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Descriprtion"/>

    <TextView
        android:layout_below="@+id/tvPerItemDescription"
        android:id="@+id/tvPerItemTime"
        android:layout_marginLeft="50dp"
        android:text="9:00 am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@id/tvPerItemTime"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textColor="@color/colorGreen"
        android:id="@+id/tvPerItemAmount"
        android:textStyle="bold"
        android:layout_marginLeft="100dp"
        android:text="Rs. 100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


